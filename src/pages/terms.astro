	basic: {
		title: "Terms and Conditions | Triplay.ai",
		description: 'Unlock hassle-free adventures with us! Navigate website usage, license terms, and custom trips smoothly with our clear Terms and Conditions.',
		type: "website",
		image: "https://triplay.ai/triplay-logo.svg",
		url: 'https://triplay.ai/terms',
